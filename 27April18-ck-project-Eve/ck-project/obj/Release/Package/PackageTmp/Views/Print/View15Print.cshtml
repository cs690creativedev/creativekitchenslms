@using PagedList;
@using PagedList.Mvc;
@model IEnumerable<ck_project.Models.CLSA15>
@{
    Layout = null;
}

<!DOCTYPE html>
@using (Html.BeginForm("MonthlySalesReport", "Reports", FormMethod.Get))
{

}
<html>
<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="initial-scale=1.0">*@
    <title>Sale Contract Management System</title>
    <link href="http://leadmanagealpha.apphb.com/Content/bootstrap.sandstone.css" rel="stylesheet" type="text/css" />
    <link href="http://leadmanagealpha.apphb.com/Content/Print.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="pic2" align="center"><img src="http://leadmanagealpha.apphb.com/Content/Images/proposal_pic2.png" /></div>

    <table class="container" style="width:300px;padding:40px" align="right">
        <tr>
            <td style="padding:5px 10px;border:1px solid #666">
                <label>From : </label>
                @Session["dtFrom"]
            </td>
            <td style="padding:5px 10px;border:1px solid #666">
                <label>To : </label>
                @Session["dtTo"]
            </td>
        </tr>
    </table>

    <br />
    <div class="header"><h2>MONTHLY SALES REPORT</h2></div>

    <div>
        <table class="table table-striped">
            <thead class="mdb-color darken-3">
                <tr>
                    <th>
                        Month
                    </th>
                    <th>
                        Huntington
                    </th>
                    <th>
                        Charleston
                    </th>
                    <th>
                        Lewisburg
                    </th>
                    <th>
                        Total
                    </th>
                    <th>
                        Percentage
                    </th>

                    <th></th>
                </tr>
            </thead>

            @{
                foreach (var prod in Model)
                {
                    <tr>
                        <td>@prod.Month</td>
                        <td>@prod.Huntington.ToString("0.00")</td>
                        <td>@prod.Charleston.ToString("0.00")</td>
                        <td>@prod.Lewisburg.ToString("0.00")</td>
                        <td>@prod.Total.ToString("0.00")</td>
                        <td>@prod.Percentage.ToString("0.00")</td>
                    </tr>
                }
            }
        </table>
    </div>
</body>
</html>
