@using PagedList;
@using PagedList.Mvc;
@using ck_project.Models;
@model IEnumerable<ck_project.Models.CLSA5_1>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @if (ViewBag.m != null)
    {
        <script type="text/javascript">
 $(document).ready(function () {
     toastr.success('@ViewBag.m');


 });

        </script>
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="initial-scale=1.0">*@
    <title>Sale Contract Management System</title>
    <link href="http://leadmanagealpha.apphb.com/Content/bootstrap.sandstone.css" rel="stylesheet" type="text/css" />
    <link href="http://leadmanagealpha.apphb.com/Content/Print.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nanum+Gothic" rel="stylesheet">
    <link href="~/Content/report.css" rel="stylesheet" />
    <style>
        
.table1{
    border-collapse: collapse;
    border-spacing: 0;
    width: 100%;
    border: 1px solid #ddd; 
	font-family: 'Nanum Gothic', sans-serif;
	font-weight:normal;
}

.table1 th, .table1 td {
    text-align:center; border: 1px solid #ddd;
    padding: 8px;
}

.table1 tr:nth-child(even){background-color: #f2f2f2}

    </style>
    
</head>
<body>
    
        <div class="pic2" align="center"><img src="http://leadmanagealpha.apphb.com/Content/Images/proposal_pic2.png" /></div>

        <table class="container" style="width:300px;padding:40px" align="right">
            <tr>
                <td style="padding:5px 10px;border:1px solid #666">
                    <label>From : </label>
                    @Session["dtFrom"]
                </td>
                <td style="padding:5px 10px;border:1px solid #666">
                    <label>To : </label>
                    @Session["dtTo"]
                </td>
            </tr>
        </table>

        <br />
        <div class="header"><h2>COMPANY Lead Type Category Analysis</h2></div>

            <table cellspacing="0" class="table1">
                <thead>
                    <tr>
                        <th colspan="5">Project CATEGORY</th>
                    </tr>

                </thead>
                <thead>
                    <tr>
                        <th rowspan="2">CATEGORY</th>
                        <th data-priority="1">HUNTINGTON</th>
                        <th data-priority="3">CHARLESTON</th>
                        <th data-priority="3">LEWISBURG</th>
                        <th data-priority="3">COMPANY TOTAL</th>

                    </tr>

                </thead>



                @foreach (var item in Model)
            {
                if (item.Total > 0)
                {
                        <tr>
                            <td>
                                @item.Project_Type

                            </td>
                            <td>
                                @item.Huntington

                            </td>
                            <td>
                                @item.Charleston

                            </td>
                            <td>
                                @item.Lewisburg

                            </td>
                            <td>
                                @item.Total

                            </td>

                        </tr>
                }
            }

            </table>
            <br />
            <br />


            <table cellspacing="0" class="table1">
                <thead>
                    <tr>
                        <th rowspan="5">DELIVERY TYPE</th>
                    </tr>

                </thead>
                <thead>
                    <tr>
                        <th rowspan="2">DELIVERY TYPE</th>
                        <th data-priority="1">HUNTINGTON</th>
                        <th data-priority="3">CHARLESTON</th>
                        <th data-priority="3">LEWISBURG</th>
                        <th data-priority="3">COMPANY TOTAL</th>

                    </tr>

                </thead>

                @foreach (var item in Model)
            {
                if (item.Total2 > 0)
                {
                        <tr>
                            <td>
                                @item.Delivery_Type
                            </td>
                            <td>
                                @item.Huntington2
                            </td>
                            <td>
                                @item.Charleston2
                            </td>
                            <td>
                                @item.Lewisburg2
                            </td>
                            <td>
                                @item.Total2
                            </td>


                        </tr>
                }
            }

            </table>

       
   
</body>
</html>
