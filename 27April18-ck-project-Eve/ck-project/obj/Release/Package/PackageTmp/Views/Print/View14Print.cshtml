@using PagedList;
@using PagedList.Mvc;
@model IEnumerable<ck_project.Models.CLSA14>
@{
    Layout = null;
}

<!DOCTYPE html>
@using (Html.BeginForm("CompanyYearToDateByDesignerReport", "Reports", FormMethod.Get))
{

}
<html>
<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="initial-scale=1.0">*@
    <title>Sale Contract Management System</title>
    <link href="http://leadmanagealpha.apphb.com/Content/bootstrap.sandstone.css" rel="stylesheet" type="text/css" />
    <link href="http://leadmanagealpha.apphb.com/Content/Print.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="pic2" align="center"><img src="http://leadmanagealpha.apphb.com/Content/Images/proposal_pic2.png" /></div>

    <table class="container" style="width:300px;padding:40px" align="right">
        <tr>
            <td style="padding:5px 10px;border:1px solid #666">
                <label>From : </label>
                @Session["dtFrom"]
            </td>
            <td style="padding:5px 10px;border:1px solid #666">
                <label>To : </label>
                @Session["dtTo"]
            </td>
        </tr>
    </table>

    <br />
    <div class="header"><h2>COMPANY YEAR TO DATE BY DESIGNER REPORT</h2></div>

    <div>
        <table class="table table-striped">
            <thead class="mdb-color darken-3">
                <tr>
                    <th>
                        Designer
                    </th>
                    <th>
                        Assigned Leads
                    </th>
                    <th>
                        Leads Assigned
                    </th>
                    <th>
                        Sold Jobs
                    </th>
                    <th>
                        Amount Of Sold Jobs
                    </th>
                    <th>
                        Lost Jobs
                    </th>
                    <th>
                        Amount Of Lost Jobs
                    </th>

                    <th>
                        Closed Percentage
                    </th>
                    <th>
                        Avg Days to Sell
                    </th>
                    <th>
                        Avg Amount Of Sold Jobs
                    </th>


                    <th></th>
                </tr>
            </thead>

            @{
                foreach (var prod in Model)
                {
                    <tr>
                        <td>@prod.Designer.ToString()</td>
                        <td>@prod.Assigned_Leads.ToString()</td>
                        <td>@prod.Total_amount_all_leads.ToString()</td>
                        <td>@prod.Sold_Jobs_Only.ToString()</td>
                        <td>@prod.Total_amount_Sold_Jobs.ToString()</td>
                        <td>@prod.Lost_Jobs_Only.ToString()</td>
                        <td>@prod.Total_Amount_Lost_Jobs.ToString()</td>
                        <td>@prod.Closed_Percentage.ToString()</td>
                        <td>@prod.Avg_Days_Sell.ToString()</td>
                        <td>@prod.Avg_Amount_Sold_Jobs.ToString()</td>

                    </tr>
                }
            }
        </table>
    </div>
</body>
</html>
